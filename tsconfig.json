{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "db/*": ["db/*"],
      "modules/*": ["modules/*"],
    },
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "typeRoots": ["types/"]
  },
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules", ".vscode", "*.cjs", "*.js"]
}
